{
    "preset": "laravel",
    "rules": {
        "declare_strict_types": true,
        "align_multiline_comment": true,
        "array_indentation": true,
        "array_syntax": true,
        "blank_line_after_namespace": true,
        "blank_line_after_opening_tag": true,
        "cast_spaces": true,
        "control_structure_continuation_position": true
    },
    "exclude": [
        "config",
        "bootstrap",
        "lang",
        "database"
    ]
}